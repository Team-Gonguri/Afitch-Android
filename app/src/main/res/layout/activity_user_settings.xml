<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:fontFamily="@font/fontstyle"
    tools:context=".User_settings">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="113dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="282dp"
        android:layout_marginBottom="317dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/settingsId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/notosans_thin"
                android:includeFontPadding="false"
                android:text="  idid"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/notosans_thin"
                android:includeFontPadding="false"
                android:text="                  님이"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_thin"
                android:includeFontPadding="false"
                android:text=" 와 함께한 시간은?"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/withdays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_thin"
            android:includeFontPadding="false"
            android:text="29 days"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="129dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09"
        app:srcCompat="@drawable/profileimage" />


    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="@color/pink100"/>

        <TextView
            android:id="@+id/editBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:fontFamily="@font/notosans_light"
            android:includeFontPadding="false"
            android:onClick="onClick"
            android:clickable="true"
            android:text="회원 정보 수정"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <View
            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E6000000"/>


        <TextView
            android:id="@+id/musicBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:fontFamily="@font/notosans_light"
            android:includeFontPadding="false"
            android:onClick="onClick"
            android:clickable="true"

            android:text="음악 설정"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <View
            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6000000"/>


        <TextView
            android:id="@+id/resetBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:fontFamily="@font/notosans_light"
            android:includeFontPadding="false"
            android:onClick="onClick"
            android:clickable="true"

            android:text="모든 설정 초기화"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <View
            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6000000"/>

        <TextView
            android:id="@+id/feedbackBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:fontFamily="@font/notosans_light"
            android:includeFontPadding="false"
            android:onClick="onClick"
            android:clickable="true"

            android:text="개발자에게 문의 / 피드백"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <View
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6000000"/>


        <TextView
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:fontFamily="@font/notosans_light"
            android:includeFontPadding="false"
            android:onClick="onClick"
            android:clickable="true"

            android:text="로그아웃"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>